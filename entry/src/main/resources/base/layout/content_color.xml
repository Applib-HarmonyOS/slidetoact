<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_reset_slider"
        ohos:orientation="vertical"
        ohos:padding="8vp">

        <DirectionalLayout
            ohos:id="$+id:slide_container"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_red_A200"
                ohos:text="$string:txt_accent_red"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_purple_A200"
                ohos:text="$string:txt_accent_purple"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_indigo_A200"
                ohos:text="$string:txt_accent_indigo"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_deep_orange_A200"
                ohos:text="$string:txt_accent_deep_orange"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:innerColor="$color:md_grey_800"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_amber_A200"
                ohos:text="$string:txt_accent_amber_grey_800"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:innerColor="$color:md_grey_800"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_teal_A200"
                ohos:text="$string:txt_accent_teal_grey_800"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:innerColor="$color:md_grey_800"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_green_A200"
                ohos:text="$string:txt_accent_green_grey_800"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:innerColor="$color:md_white_1000"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_grey_900"
                ohos:text="$string:txt_grey_900_white"/>

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:innerColor="$color:md_grey_900"
                ohos:margin="6vp"
                ohos:outerColor="$color:md_white_1000"
                ohos:text="$string:txt_white_grey_900"/>

        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:btn_reset_slider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="$ohos:color:id_color_activated_start_dark"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="4vp"
        ohos:padding="8vp"
        ohos:text="$string:btn_reset_slider"
        ohos:text_size="14fp"
        />

</DependentLayout>