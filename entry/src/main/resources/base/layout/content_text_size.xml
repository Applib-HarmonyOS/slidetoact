<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <ScrollView
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_reset_slider"
        ohos:padding="8vp"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:id="$+id:slide_container"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <!-- No Text -->
            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:text="" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:textSize="12fp"
                ohos:text="$string:txt_text_size_12" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:textSize="14fp"
                ohos:text="$string:txt_text_size_14" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:textSize="16fp"
                ohos:text="$string:txt_text_size_16" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:textSize="20fp"
                ohos:text="$string:txt_text_size_20" />

        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:btn_reset_slider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:margin="4vp"
        ohos:padding="8vp"
        ohos:background_element="$ohos:color:id_color_activated_start_dark"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:btn_reset_slider"
        ohos:text_size="14fp"
        />

</DependentLayout>