<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_reset_slider"
        ohos:orientation="vertical"
        ohos:padding="8vp">

        <DirectionalLayout
            ohos:id="$+id:slide_container"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <com.ncorti.slidetoact.SlideToActView
                ohos:id="$+id:slide_custom_icon"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:sliderIcon="$graphic:custom_icon"
                ohos:text="$string:txt_custom_icon" />

            <Button
                ohos:id="$+id:button_app_icon"
                ohos:width="140vp"
                ohos:height="match_content"
                ohos:margin="4vp"
                ohos:padding="8vp"
                ohos:background_element="$ohos:color:id_color_activated_start_dark"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="14fp"
                ohos:text="$string:use_lock_icon" />

            <Button
                ohos:id="$+id:button_cloud_icon"
                ohos:width="140vp"
                ohos:height="match_content"
                ohos:margin="4vp"
                ohos:padding="8vp"
                ohos:background_element="$ohos:color:id_color_activated_start_dark"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="14fp"
                ohos:text="$string:use_cloud_icon" />

            <Button
                ohos:id="$+id:button_complete_icon"
                ohos:width="140vp"
                ohos:height="match_content"
                ohos:margin="4vp"
                ohos:padding="8vp"
                ohos:background_element="$ohos:color:id_color_activated_start_dark"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="14fp"
                ohos:multiple_lines="true"
                ohos:text="$string:complete_custom_icon" />

        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:btn_reset_slider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="$ohos:color:id_color_activated_start_dark"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="4vp"
        ohos:padding="8vp"
        ohos:text="$string:btn_reset_slider"
        ohos:text_size="14fp"
        />

</DependentLayout>
